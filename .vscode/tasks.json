{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc.exe/g++.exe générer et executer le fichier actif",
            "command": ".vscode\\build.bat '${relativeFile}' '${fileBasenameNoExtension}' '${fileExtname}'",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cpp.exe générer le fichier actif",
            "command": "C:\\msys64\\usr\\bin\\cpp.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}